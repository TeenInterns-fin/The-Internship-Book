# Environment Configuration for The Internship Book
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000

# Instamojo Configuration
# Get these from your Instamojo dashboard: https://www.instamojo.com/
INSTAMOJO_API_KEY=your_instamojo_api_key_here
INSTAMOJO_AUTH_TOKEN=your_instamojo_auth_token_here
INSTAMOJO_SALT=your_webhook_salt_here

# For Production (use live URLs)
# INSTAMOJO_API_KEY=live_api_key
# INSTAMOJO_AUTH_TOKEN=live_auth_token

# Email Configuration (for confirmation emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@teeninterns.com

# Alternative Email Services
# For SendGrid:
# SENDGRID_API_KEY=your_sendgrid_api_key

# For Mailgun:
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://username:password@localhost:5432/internship_book
# MONGODB_URI=mongodb://localhost:27017/internship_book

# Redis Configuration (for caching and sessions)
# REDIS_URL=redis://localhost:6379

# JWT Secret (for authentication if needed)
JWT_SECRET=your_super_secret_jwt_key_here

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security Configuration
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://teeninterns.com,https://www.teeninterns.com

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
